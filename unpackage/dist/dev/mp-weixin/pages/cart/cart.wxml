<view class="cart"><view class="cartList"><block wx:for="{{cartList}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="cartItem"><text data-event-opts="{{[['tap',[['changeSelected',[!item.isSelected,index]]]]]}}" class="{{['iconfont','icon-xuanzhong',(item.isSelected)?'selected':'']}}" bindtap="__e"></text><view class="goodsItem"><image src="{{item.listPicUrl}}" mode></image><view class="goodsInfo"><view class="name">{{''+item.name+''}}</view><view class="price">{{'￥'+item.retailPrice+'/斤'}}</view></view></view><view class="countCtrl"><text data-event-opts="{{[['tap',[['changeCount',[false,index]]]]]}}" class="sub" bindtap="__e">-</text><text class="count">{{item.count}}</text><text data-event-opts="{{[['tap',[['changeCount',[true,index]]]]]}}" class="add" bindtap="__e">+</text></view></view></block></view><view class="footer"><view class="img"><text data-event-opts="{{[['tap',[['changeAllSelected',[!isAllSelected]]]]]}}" class="{{['iconfont','icon-xuanzhong',(isAllSelected)?'selected':'']}}" bindtap="__e"></text><text>{{"已选 "+totalCount}}</text></view><view class="btn btnColor">{{"合计：￥ "+$root.g0}}</view><view class="btn order">下单</view></view></view>