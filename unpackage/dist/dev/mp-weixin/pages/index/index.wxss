.indexContainer .header {
  display: flex;
  padding: 10rpx 5rpx;
}
.indexContainer .header .logo {
  border-radius: 20rpx;
  width: 140rpx;
  height: 80rpx;
}
.indexContainer .header .search {
  position: relative;
  margin: 10rpx 16rpx;
  width: 820rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}
.indexContainer .header .search .searchText {
  color: #f2a900;
  margin: 13rpx 70rpx;
}
.indexContainer .header .search input {
  width: 360rpx;
  height: 60rpx;
  margin-left: 60rpx;
  font-size: 26rpx;
}
.indexContainer .header .search input .placeholder {
  font-size: 26rpx;
  color: #f2a900;
}
.indexContainer .header .search .iconfont {
  position: absolute;
  font-size: 40rpx;
  top: 10rpx;
  left: 15rpx;
}
.indexContainer .header button {
  width: 144rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
  padding: 0 4rpx;
  color: #fff;
  background-color: #f2a900;
}
.indexContainer .scrollNav {
  display: flex;
  height: 80rpx;
  white-space: nowrap;
}
.indexContainer .scrollNav .navItem {
  display: inline-block;
  height: 40rpx;
  padding: 10rpx;
  font-size: 26rpx;
}
.indexContainer .scrollNav .active {
  color: #f2a900;
  border-bottom: 3rpx solid #f2a900;
}

