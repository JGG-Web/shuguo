.search-box .search-header {
  display: flex;
}
.search-box .search-header .search {
  position: relative;
  margin: 14rpx 20rpx;
  width: 95%;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f5f5f5;
}
.search-box .search-header .search input {
  width: 650rpx;
  height: 60rpx;
  margin-left: 60rpx;
  font-size: 26rpx;
}
.search-box .search-header .search input .placeholder {
  font-size: 26rpx;
  color: #f2a900;
}
.search-box .search-header .search .iconfont {
  position: absolute;
  font-size: 40rpx;
  top: 10rpx;
  left: 15rpx;
}
.search-box .search-header button {
  width: 134rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  margin-top: 10rpx;
  padding: 0 4rpx;
  color: #fff;
  background-color: #f2a900;
}
.search-box .selectItem {
  display: flex;
  justify-content: space-around;
}
.search-box .selectItem .paiming {
  font-size: 36rpx;
  font-weight: 600;
}
.search-box .goodsList {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 20rpx;
}
.search-box .goodsList::after {
  content: "";
  width: 344rpx;
}
.search-box .goodsList .goodsItem {
  width: 344rpx;
  height: 480rpx;
}
.search-box .goodsList .goodsItem image {
  width: 344rpx;
  height: 344rpx;
}
.search-box .goodsList .goodsItem .goodsPrice {
  color: #f00;
  font-size: 36rpx;
}

